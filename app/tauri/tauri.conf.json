{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.roldanjr.pomatez",
  "productName": "Pomatez",
  "version": "1.7.2",
  "build": {
    "beforeBuildCommand": "yarn run tauri:updateversion && yarn build",
    "beforeDevCommand": "yarn dev:tauri",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../renderer/build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 502,
        "resizable": true,
        "title": "pomatez",
        "width": 340
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "createUpdaterArtifacts": true,
    "copyright": "Copyright Â© 2025 Roldan Montilla Jr",
    "externalBin": [],
    "license": "../../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "publisher": "Roldan Montilla Jr",
    "resources": ["icons/icon.png"],
    "shortDescription": "",
    "targets": ["deb", "rpm", "appimage", "msi", "nsis", "dmg"],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {}
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "bannerPath": "./installer/wix/banner.bmp",
        "dialogImagePath": "./installer/wix/dialog.bmp"
      },
      "nsis": {
        "headerImage": "./installer/nsis/header.bmp",
        "sidebarImage": "./installer/nsis/sidebar.bmp",
        "installerIcon": "./icons/icon.ico",
        "installMode": "both"
      }
    }
  }
}
